@model List<StudentList.Models.Domain.Student>

@{
}

<h1>Students</h1>

<table class="table">
   <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Tuition</th>
            <th>Class</th>
            <th> </th>
        </tr>
   </thead>
   <tbody>
       @foreach(var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.DateofBirth.ToString("dd-MM-yyyy")</td>
                <td>@student.Tuition</td>
                <td>@student.Class</td>
                <td><a href="Student/View/@student.Id">View</a></td>
            </tr>
        }
    </tbody>

</table>
